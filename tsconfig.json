{
  "include": ["**/*.ts", "**/*.tsx", ".eslintrc.cjs", "uno.config.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
